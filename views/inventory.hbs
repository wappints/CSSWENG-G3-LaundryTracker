        <!-- Table Cart -->
        <!-- Header -->
        <div class="col-md-12">
          <table class="table text-center table-striped">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Item</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Add/Remove</th>
              </tr>
            </thead>

            <!-- Table Body -->
            <tbody>
              <tr>
                <td width="200">Downy</td>
                <td>{{DOWNPrice}}</td>
                <td><div id="QTYFieldDowny">{{INVDowny}}</div></td>
                <td>
                    <button id="DECDownybtn" class="btn btn-danger" data-toggle="modal" ><i class="bi bi-dash"></i></button>
                        <input type="text" size="1" class="text-center" placeholder="Qty.">
                    <button id="INCDownybtn"class="btn btn-primary" data-toggle="modal"><i class="bi bi-plus"></i></button>
                </td>
              </tr>

               <tr>
                <td width="200">Soap</td>
                
                <td> {{SOAPPrice}} </td>
                <td > <div id="QTYFieldSoap">{{INVSoap}}</div></td>
                <td>
                    <button id="DECSoapbtn" class="btn btn-danger" data-toggle="modal" ><i class="bi bi-dash"></i></button>
                        <input type="text" size="1" class="text-center" placeholder="Qty.">
                    <button id="INCSoapbtn" class="btn btn-primary" data-toggle="modal"><i class="bi bi-plus"></i></button>
               </td>
              </tr>
                    <script>
                      var ACCType = $("#navACCType").text()
                      var INVDowny = parseInt($("#QTYFieldDowny").text())
                      var INVSoap = parseInt($("#QTYFieldSoap").text())
                      console.log(INVDowny)
                      console.log(INVSoap)
                      $("#INCDownybtn").click((event) =>
                      {
                        INVDowny = INVDowny + 1;
                        document.getElementById("QTYFieldDowny").innerText = INVDowny
                        $.post("/inventory/" + ACCType, {INVDowny : INVDowny, INVSoap : INVSoap}, function (req, res) {})
                      })
                      $("#DECDownybtn").click((event) =>
                      {
                        INVDowny = INVDowny - 1;
                        document.getElementById("QTYFieldDowny").innerText = INVDowny
                        $.post("/inventory/" + ACCType, {INVDowny : INVDowny, INVSoap : INVSoap}, function (req, res) {
                        })
                      })
                      $("#DECSoapbtn").click((event) =>
                      {
                       INVSoap = INVSoap - 1;
                       document.getElementById("QTYFieldSoap").innerText = INVSoap
                      $.post("/inventory/" + ACCType, {INVDowny : INVDowny, INVSoap : INVSoap}, function (req, res) {})
                      })
                      $("#INCSoapbtn").click((event) =>
                      {
                        INVSoap = INVSoap + 1;
                        document.getElementById("QTYFieldSoap").innerText = INVSoap
                      $.post("/inventory/" + ACCType, {INVDowny : INVDowny, INVSoap : INVSoap}, function (req, res) {})
                      })
                      
                    </script>



            </tbody>
            <!-- End of Table Body -->

          </table>
